<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <style name="PeckTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="bt_feed">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="bt_feed_selected">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="lv_style">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0px</item>
    </style>

    <style name="iv_wrapper">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="tab_ll">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="riv_default">
        <item name="android:src">@drawable/ic_peck</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    
</resources>
