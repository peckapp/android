<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <LinearLayout style="@style/iv_wrapper">

        <com.makeramen.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:oval="true"
            style="@style/riv_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:id="@+id/tv_text"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="@dimen/feed_vert_margin"
        android:layout_marginLeft="@dimen/feed_horz_margin"
        android:layout_marginRight="@dimen/feed_horz_margin"/>




</LinearLayout>